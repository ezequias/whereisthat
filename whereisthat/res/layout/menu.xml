<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_bg" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        style="@style/TitleBar" >
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_weight="1.19"
            android:src="@drawable/menu_logo" />
    </LinearLayout>
 
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llRodape"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1" >
 
        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >           
            
            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >
         
                   <ImageView
                       android:id="@+id/ivNewGame"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:contentDescription="@null"
                       android:layout_height="wrap_content"
                       android:onClick="btnNewGame"
                       android:src="@drawable/mbt_start" />
         
                   <ImageView
                       android:id="@+id/ivSettings"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:contentDescription="@null"
                       android:layout_height="wrap_content"
                       android:src="@drawable/mbt_settings" />
            </LinearLayout>
 
            <LinearLayout
                android:id="@+id/LinearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal" >
 
                <TextView
                    android:id="@+id/new_game_button"
                    style="@style/MenuBtnTextStyle"
                    android:layout_width="0dp"
                    android:layout_marginTop="0dip"
                    android:layout_weight="1"
                    android:text="@string/new_game_label" />
 
                <TextView
                    android:id="@+id/settings_button"
                    style="@style/MenuBtnTextStyle"
                    android:layout_width="0dp"
                    android:layout_marginTop="0dip"
                    android:layout_weight="1"
                    android:text="@string/settings_label" />
            </LinearLayout>
             
             
            <LinearLayout
                android:id="@+id/LinearLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >
         
                   <ImageView
                       android:id="@+id/ivRanking"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:contentDescription="@null"
                       android:layout_height="wrap_content"
                       android:src="@drawable/mbt_ranking" />
         
                   <ImageView
                       android:id="@+id/ivExit"
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:contentDescription="@null"
                       android:layout_height="wrap_content"
                       android:onClick="onClickSobre"
                       android:src="@drawable/mbt_exit" />
            </LinearLayout>       
             
            <LinearLayout
                android:id="@+id/LinearLayout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal" >
 
                <TextView
                    android:id="@+id/ranking_button"
                    style="@style/MenuBtnTextStyle"
                    android:layout_width="0dp"
                    android:layout_marginTop="0dip"
                    android:layout_weight="1"
                    android:text="@string/ranking_label" />
 
                <TextView
                    android:id="@+id/exit_button"
                    style="@style/MenuBtnTextStyle"
                    android:layout_width="0dp"
                    android:layout_marginTop="0dip"
                    android:layout_weight="1"
                    android:text="@string/exit_label" />
            </LinearLayout>           
        </LinearLayout>
 
    </RelativeLayout>
         
    <LinearLayout
        android:id="@+id/llRodape"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" > 
    </LinearLayout>       
 
</RelativeLayout>